rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuth() {
    	return request.auth != null && request.auth.uid != null;
    }

    match /applications/{appId} {
      allow create: if isAuth();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}